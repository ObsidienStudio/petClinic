pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo "Building..."
                step ([$class: 'CopyArtifact',
                        projectName: 'petClinic',
                        target: 'C:/Users/33767/Documents/GitHub/petClinic']
                );
                echo "Building finished"
            }
        }

        stage('Deploy') {
            steps {
                bat 'mvn C:/Users/33767/Documents/GitHub/petClinic/target/spring-petclinic-*.jar C:/Users/33767/Documents/CODE/cefim-jenkins-box/cefim-jenkins-box-master/data/spring-petclinic-prod.jar'
                bat 'sudo systemctl restart petclinic'
            }
        }
    }
}